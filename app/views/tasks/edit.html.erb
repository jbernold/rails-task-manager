<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% @completion_message = "This task is not completed yet" %>
  <% @completion_message = "This task is completed" if @task.completed %>
  <%= f.label @completion_message %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
